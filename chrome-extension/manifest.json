{
  "manifest_version": 3,
  "name": "Product Launch Planner",
  "version": "1.0.0",
  "description": "Scrape and analyze Amazon products for your product launch",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/icon16.png",
      "48": "src/images/icon48.png",
      "128": "src/images/icon128.png"
    }
  },
  "icons": {
    "16": "src/images/icon16.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*"
      ],
      "js": ["src/content.js"]
    }
  ]
}